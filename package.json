{
  "name": "signalk-halpi",
  "version": "0.1.0",
  "description": "Signal K plugin for HALPI2 device monitoring via halpid daemon",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "signalk-node-server-plugin",
    "signalk-category-hardware",
    "signalk",
    "halpi",
    "halpi2",
    "power-management",
    "raspberry-pi"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint --fix src/ test/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "ci": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hatlabs/signalk-halpi.git"
  },
  "author": "Matti Airas <matti.airas@hatlabs.fi>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hatlabs/signalk-halpi/issues"
  },
  "homepage": "https://github.com/hatlabs/signalk-halpi#readme",
  "peerDependencies": {
    "@signalk/server-api": "^2.10.0"
  },
  "devDependencies": {
    "@signalk/server-api": "^2.10.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.15.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "lefthook": "^1.11.13",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "signalk-plugin-enabled-by-default": false
}
